{{ docType() }}
<html class="no-js" lang="en">

    <head>
        <title></title>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {# All css files are included here. #}
        {# Favicon #}
        {{ headLink({'rel': 'apple-touch-icon', 'href': basePath('/MelisDemoCmsTwig/images/icons/favicon.ico')}, 'PREPEND') }}

        {# Render Page CSS from Controller Action of the page #}
        {% if pageCss is iterable %}
            {% for css in pageCss %}
                {{ headLink().appendStylesheet(pageCss[loop.index0]) }}
            {% endfor %}
        {% endif %}

        {# Generate Styles #}
        {{ headLink() }}

        {# Modernizr JS #}
        {{ headScript().appendFile(basePath('/MelisDemoCmsTwig/js/vendor/modernizr-2.8.3.min.js')) | raw }}

        {# Generate JS #}
        {{ headScript() }}
    </head>

    <body>
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        
        <div class="wrapper home-one">
            <!-- Start of header area -->
            <header class="header-area header-wrapper">
                <div class="header-top-bar black-bg clearfix">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 hidden-xs">
                                <div class="social-search-area text-right">
                                    <div class="social-icon socile-icon-style-2">
                                        <ul>
                                            <li><a href="https://www.facebook.com/melistechnology" title="facebook" target="_blank"><i class="fa fa-facebook"></i></a> </li>
                                            <li><a href="https://twitter.com/meliscms" title="twitter" target="_blank"><i class="fa fa-twitter"></i></a> </li>
                                            <li><a href="https://www.linkedin.com/company/melis-technology" title="linkedin" target="_blank"><i class="fa fa-linkedin"></i></a> </li>
                                        </ul>
                                     </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="sticky-header"  class="header-middle-area">
                    <div class="container">
                        <div class="full-width-mega-dropdown">
                            <div class="row">
                                <div class="col-md-2 col-sm-2">
                                    <div class="logo ptb-20"><a href="/"> 
                                        <img src="{{ basePath('/MelisDemoCmsTwig/images/logo/logo.png') }}" alt="main logo"></a>
                                    </div>
                                </div>
                                <div class="col-md-8 col-sm-10 col-xs-12 m-no-padding">
                                <!-- Site Menu -->
                                {{ MelisMenu(siteMenuParameters) }}
                                <!-- End of Site Menu -->
                                </div>
                                <!-- Header Search Menu -->
                                <div class="col-md-2 hidden-sm hidden-xs">
                                    <div class="search-box global-table">
                                        <div class="global-row">
                                            <div class="global-cell">
                                                <form action="{{ MelisLink(SiteConfig('search_result_page_id'), false) }}" method="get">
                                                    <div class="input-box">
                                                        <input class="single-input" placeholder="Search" type="text" name=keyword value="{{ layout().search }}" required>
                                                        <button class="src-btn"><i class="fa fa-search"></i></button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End of Header Search Menu -->
                                
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content area start -->
             {% block content %}
                <h4><em>Auto-generated content, which shall be replaced via inheritance a.k.a <strong>extends</strong></em></h4>
             {% endblock %}
            <!-- End of Content area -->

        {# Homepage with pageId of one(1) can only edit the editable areas.On this demo we use pageId one(1) as homepage #}
        {% set editableTextarea = (idPage == SiteConfig('homePageId')) ? 'textarea' : null %}
        {% set editableHtml = (idPage == SiteConfig('homePageId')) ? 'html' : null %}

        <!-- footer area start-->
        <div class="footer-area ptb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                        <div class="single-footer contact-us">
                            <div class="footer-title uppercase">
                                <h5>
                                  {{ MelisTag(SiteConfig('homePageId'), "footer_title_1", editableTextarea, 'Contact US') }}
                             </h5> 
                            </div>
                            {{ MelisTag(SiteConfig('homePageId'), 'footer_text_1', editableHtml,
                                '<ul>
                                    <li>
                                        <div class="contact-icon"> 
                                          <i class="zmdi zmdi-pin-drop"></i>
                                      </div>
                                        <div class="contact-text">
                                            <p><span>777/a  Seventh Street,</span> <span>Rampura, Bonosri</span></p>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="contact-icon"> <i class="zmdi zmdi-email-open"></i> </div>
                                        <div class="contact-text">
                                            <p><span><a href="#">company@gmail.com</a></span> <span><a href="#">admin@devitems.com</a></span></p>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="contact-icon"> <i class="zmdi zmdi-phone-paused"></i> </div>
                                        <div class="contact-text">
                                            <p><span>+11 (019) 25184203</span> <span>+11 (018) 50950555</span></p>
                                        </div>
                                    </li>
                                </ul>')
                            }}
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                        <div class="single-footer informaton-area">
                            <div class="footer-title uppercase">
                                <h5>{{ MelisTag(SiteConfig('homePageId'), "footer_title_2", editableTextarea, 'Information') }}</h5>
                            </div>
                            <div class="informatoin">
                                <ul>
                                    {{ MelisTag(SiteConfig('homePageId'), 'footer_text_2', editableHtml,
                                        '<li><a href="#">My Account</a></li>
                                        <li><a href="#">Order History</a></li>
                                        <li><a href="#">Wishlist</a></li>
                                        <li><a href="#">Returnes</a></li>
                                        <li><a href="#">Private Policy</a></li>
                                        <li><a href="#">Site Map</a></li>')
                                    }}
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 hidden-sm col-xs-12">
                        <div class="single-footer instagrm-area">
                            <div class="footer-title uppercase">
                                <h5>{{ MelisTag(SiteConfig('homePageId'), "footer_title_3", editableTextarea, 'InstaGram') }}</h5>
                            </div>
                            {{ MelisTag(SiteConfig('homePageId'), 'footer_text_3', editableHtml,
                                '<div class="instagrm">
                                    <ul>
                                        <li><a href="#"><img src="' ~ basePath('/MelisDemoCmsTwig/images/gallery/01.jpg') ~ '" alt=""></a></li>
                                        <li><a href="#"><img src="' ~ basePath('/MelisDemoCmsTwig/images/gallery/02.jpg') ~ '" alt=""></a></li>
                                        <li><a href="#"><img src="' ~ basePath('/MelisDemoCmsTwig/images/gallery/03.jpg') ~ '" alt=""></a></li>
                                        <li><a href="#"><img src="' ~ basePath('/MelisDemoCmsTwig/images/gallery/04.jpg') ~ '" alt=""></a></li>
                                        <li><a href="#"><img src="' ~ basePath('/MelisDemoCmsTwig/images/gallery/05.jpg') ~ '" alt=""></a></li>
                                        <li><a href="#"><img src="' ~ basePath('/MelisDemoCmsTwig/images/gallery/06.jpg') ~ '" alt=""></a></li>
                                    </ul>
                                </div>')
                            }}
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-4 col-lg-offset-1 col-xs-12">
                        <div class="social-icon socile-icon-style-3">
                            <div class="footer-title uppercase">
                                <h5>{{ MelisTag(SiteConfig('homePageId'), "footer_title_4", editableTextarea, 'Social Network') }}</h5>
                            </div>
                            <ul>
                                <li><a href="https://www.facebook.com/melistechnology" target="_blank"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="https://twitter.com/meliscms" target="_blank"><i class="zmdi zmdi-twitter"></i></a></li>
                                <li><a href="https://www.linkedin.com/company/melis-technology" target="_blank"><i class="zmdi zmdi-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--footer area start-->
        
        <!--footer bottom area start-->
        <div class="footer-bottom global-table">
            <div class="global-row">
                <div class="global-cell">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="site-note text-center">
                                    All of this demo website images are used under license from Shutterstock.com. It is strictly forbidden to reuse or reproduce them for any other use, even personal.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--footer bottom area end-->
    </div> 
    <!-- Body main wrapper end -->

    {# Render Page JS from Controller Action of the page #}
    {% if pageJs is iterable %}
        {% for js in pageJs %}
            {{ inlineScript().appendFile(pageJs[loop.index0]) }}
        {% endfor %}
    {% endif %}
        
    {# // Generate JS #}
    {{ inlineScript() }}
    </body>
</html>
